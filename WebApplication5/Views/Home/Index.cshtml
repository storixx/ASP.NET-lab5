@{
    ViewData["Title"] = "Home Page";
}

<h2>Set Cookie</h2>
<form asp-action="SetCookie" method="post">
    <label>Value:</label>
    <input type="text" name="value" required /><br />
<label>Expiration Date & Time:</label>
<input type="datetime-local" name="expiration" required /><br />
    <button type="submit">Submit</button>
</form>